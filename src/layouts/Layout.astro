---
import SEO from "../components/SEO.astro";

const { title, description, canonical, ogTitle, ogDescription } = Astro.props;
const siteTitle = "Barista at home"
const fullTitle = title ? `${title} | ${siteTitle}` : siteTitle;
const resolvedDescription =
  description || "Blog pédagogique sur le latte art pour amateurs passionnés";
const resolvedCanonical = canonical || Astro.url?.toString();
const resolvedOgTitle = ogTitle || fullTitle;
const resolvedOgDescription = ogDescription || resolvedDescription;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <SEO
        title={fullTitle}
        description={resolvedDescription}
        ogTitle={resolvedOgTitle}
        ogDescription={resolvedOgDescription}
        canonical={resolvedCanonical}
    />
    <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
    <header>
        <nav class="container">
            <h1><a href="/">☕ Barista at home</a></h1>
            <ul>
                <li><a href="/">Accueil</a></li>
                <li><a href="/articles">Articles</a></li>
                <li><a href="/about">À propos</a></li>
                <li>
                    <form class="header-search" action="/articles" method="get" role="search">
                        <label for="header-search-input" class="sr-only">Rechercher un article</label>
                        <input
                            id="header-search-input"
                            name="q"
                            type="search"
                            placeholder="Rechercher un titre"
                            autocomplete="off"
                        />
                        <button type="submit">OK</button>
                    </form>
                </li>
            </ul>
        </nav>
    </header>

    <main class="container">
        <slot />
    </main>

    <footer class="container">
        <p>&copy; 2026 Barista at home - Partage de passion et de savoir-faire</p>
    </footer>
</body>
</html>
