---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const tags = Array.from(
  new Set(posts.flatMap((post) => post.data.tags || []))
).sort((a, b) => a.localeCompare(b, "fr"));
---

<Layout title="Tous les articles">
  <h2 style="font-family: var(--font-heading); font-size: 2.5rem; color: var(--color-primary); margin-bottom: 1rem;">
    Tous les articles
  </h2>

  {tags.length > 0 && (
    <div class="tags" style="margin-bottom: 2rem;">
      {tags.map((tag) => (
        <a class="tag" href={`/tags/${encodeURIComponent(tag)}`}>{tag}</a>
      ))}
    </div>
  )}

  <div class="posts-list">
    {sortedPosts.map((post) => (
      <article class="post-card">
        {post.data.coverImage && (
          <img
            src={post.data.coverImage}
            alt={post.data.coverImageAlt || post.data.title}
            class="post-card-image"
          />
        )}
        <div class="post-card-content">
          <h4>
            <a href={`/posts/${post.slug}`}>{post.data.title}</a>
          </h4>
          <div class="post-card-meta">
            <time datetime={post.data.date}>
              {new Date(post.data.date).toLocaleDateString("fr-FR", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })}
            </time>
            {post.data.difficulty && (
              <span> â€¢ {post.data.difficulty}</span>
            )}
          </div>
          <p>{post.data.description}</p>
        </div>
      </article>
    ))}
  </div>
</Layout>
